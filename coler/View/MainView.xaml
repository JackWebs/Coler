<UserControl x:Class="coler.View.MainView"
             x:Name="ParentContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:coler.View"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:viewModel="clr-namespace:coler.ViewModel"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"

             DataContext="{Binding MainViewModel, Source={StaticResource Locator}}">

    <Grid Margin="0,20,0,0">

        <TabControl>
            <TabItem Header="Generate Images">
                <local:GenerateImageView/>
            </TabItem>
            <TabItem Header="View Images">
                <local:ViewImageView/>
            </TabItem>
        </TabControl>

    </Grid>

</UserControl>